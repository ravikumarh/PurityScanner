<script type="text/jscript">




    $('.btn-danger').click(function () {
        var url = $(this).attr('name');
        var prodID = $('#FilterProductID').val();
        var subproductID = $('#FilterSubProductID').val();
        var attributeID = $('#FilterAttributeID').val();
        var languageID = $('#FilterLanguageID').val();
        //  alert(url);
        var valdata = url.replace("/ProductAttributeValues/DeleteProductAttributeValue/", '');
        //  alert(valdata);
        $.post('/ProductAttributeValues/DeleteProductAttributeValue/', { id: valdata, FilterProduct: prodID, FilterSubProduct: subproductID, FilterAttribute: attributeID, FilterLanguage: languageID }, function (data) {
            $('#deleteProductAttributeValueContent').html(data);
            $('#confirmProductAttributeValue').modal('show');
        });

    });


    $('.btn-info').click(function () {
        //alert("hiiii");
        var url = $(this).attr('name');
        var prodID = $('#FilterProductID').val();
        var subproductID = $('#FilterSubProductID').val();
        var attributeID = $('#FilterAttributeID').val();
        var languageID = $('#FilterLanguageID').val();
        //alert(url);
        var valdata = url.replace("/ProductAttributeValues/EditProductAttributeValue/", '');
        // alert(valdata);
        $.post('/ProductAttributeValues/EditProductAttributeValue/', { id: valdata, FilterProduct: prodID, FilterSubProduct: subproductID, FilterAttribute: attributeID, FilterLanguage: languageID }, function (data) {
            $('#editProductAttributeValueContent').html(data);
            $('#editProductAttributeValueModal').modal('show');
        });


    })

    $('.btn-success').click(function () {
        // alert("hiiii");
        var url = $(this).attr('name');
        var prodID = $('#FilterProductID').val();
        var subproductID = $('#FilterSubProductID').val();
        var attributeID = $('#FilterAttributeID').val();
        var languageID = $('#FilterLanguageID').val();
        //alert(url);
        var valdata = url.replace("/ProductAttributeValues/ViewProductAttributeValue/", '');
        //alert(valdata);
        $.post('/ProductAttributeValues/ViewProductAttributeValue/', { id: valdata, FilterProduct: prodID, FilterSubProduct: subproductID, FilterAttribute: attributeID, FilterLanguage: languageID }, function (data) {
            $('#viewProductAttributeValueContent').html(data);
            $('#viewProductAttributeValueModal').modal('show');
        });


    })

</script>
