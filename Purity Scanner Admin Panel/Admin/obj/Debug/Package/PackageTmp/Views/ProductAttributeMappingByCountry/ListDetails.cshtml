@model IEnumerable<Admin.Models.clsProductAttributeMappingByCountry>


<div class="box col-md-12">
    <div class="box-inner">

        <div class="box-content">
            @foreach (var tmpitem in Model)
            {
                @Html.HiddenFor(model => tmpitem.FilterAttributeID)
                @Html.HiddenFor(model => tmpitem.FilterProductID)
                @Html.HiddenFor(model => tmpitem.FilterCountryCode)
                break;
            }

            <table class="table table-striped table-bordered bootstrap-datatable datatable responsive">
                <thead class="alert alert-info">
                <th>
                    @Html.DisplayNameFor(model => model.ProductName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CountryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AttributeName)
                </th>
                <th><a data-toggle="modal" href="#addNewProdAttriCountryMappingModal" class="btn btn-primary btn-small">Add New</a></th>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ProductName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CountryName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttributeName)
                            </td>
                            <td class="center">
                                <a class="btn btn-success" name="@Url.Action("ViewProdAttriCountryMapping", "ProductAttributeMappingByCountry", new { id = item.ProductAttributeCountryMappingID })" href="#">
                                    <i class="glyphicon glyphicon-zoom-in icon-white"></i>
                                    View
                                </a>
                                <a class="btn btn-info" name="@Url.Action("EditProdAttriCountryMapping", "ProductAttributeMappingByCountry", new { id = item.ProductAttributeCountryMappingID })" href="#">
                                    <i class="glyphicon glyphicon-edit icon-white"></i>
                                    Edit
                                </a>
                                <a class="btn btn-danger" name="@Url.Action("DeleteProdAttriCountryMapping", "ProductAttributeMappingByCountry", new { id = item.ProductAttributeCountryMappingID })" href="#">
                                    <i class="glyphicon glyphicon-trash icon-white"></i>
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
