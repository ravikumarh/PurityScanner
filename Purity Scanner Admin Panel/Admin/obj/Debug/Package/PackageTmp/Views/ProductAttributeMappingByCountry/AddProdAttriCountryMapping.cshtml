@model Admin.Models.clsProductAttributeMappingByCountry
@{

    HtmlHelper.ClientValidationEnabled = false;
}
@using (Html.BeginForm("AddProdAttriCountryMapping", "ProductAttributeMappingByCountry", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(Model => Model.FilterAttributeID)
        @Html.HiddenFor(Model => Model.FilterProductID)
        @Html.HiddenFor(Model => Model.FilterCountryCode)
        <div class="form-group">
        @Html.LabelFor(model => model.ProductName, new { @class = "control-label col-md-4" })
        <div class="col-md-8">
            @Html.DropDownListFor(model => model.ProductID, new SelectList(ViewBag.lstProduct, "Value", "Text"), "Select Product", new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.ProductName)
        </div>
    </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CountryName, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.CountryCode, new SelectList(ViewBag.lstCountry, "Value", "Text"), "Select Country", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CountryName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AttributeName, new { @class = "control-label col-md-4" })
            <div class="col-md-8">
                @Html.DropDownListFor(model => model.AttributeID, new SelectList(ViewBag.lstAttribute, "Value", "Text"), "Select Attribute", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.AttributeName)
            </div>
        </div>
      

        <div class="form-group">
            <div class="col-md-offset-8 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" onclick="return addvalidData();" />
                <button type="button" data-dismiss="modal" class="btn btn-default">Cancel</button>
            </div>
        </div>
    </div>
}


<script type="text/jscript">
  

    $('#ProductID').change(function () {
        addvalidData();
    })
    $('#AttributeID').change(function () {
        addvalidData();
    })

    $('#CountryCode').change(function () {
        addvalidData();
    })


    function addvalidData() {

        var prodID = $('#ProductID').val();
        var countryCode = $('#CountryCode').val();
        var attriID = $('#AttributeID').val();
       


        if (prodID) {
            $('#ProductID').css('border-color', '');
        }
        else {
            $('#ProductID').css('border-color', 'red');
        }

        if (countryCode) {
            $('#CountryCode').css('border-color', '');
        }
        else {
            $('#CountryCode').css('border-color', 'red');
        }

        if (attriID) {
            $('#AttributeID').css('border-color', '');
        }
        else {
            $('#AttributeID').css('border-color', 'red');
        }

      

        if (prodID && countryCode && attriID) {
            return true;
        }
        else {
            return false;
        }

        return false;
    }
</script>